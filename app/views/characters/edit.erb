<h1>Edit <%= @character.name %></h1>

<form action="/characters/<%= @character.id %>" method="post">
  <input type="hidden" name="_method" value="patch" >
  <label for="name">Name:</label><br>
  <input type="text" value="<%= @character.name%>" name="character[name]"><br>
  <label for="birthday">Birthday:</label><br>
  <input type="text" value="<%= @character.birthday%>" name="character[birthday]"><br>
  <label for="img">Image:</label><br>
  <input type="text" value="<%= @character.img%>" name="character[img]"><br>
  <label for="occupation">Occupation:</label><br>
  <input type="text" value="<%= @character.occupation%>" name="character[occupation]"><br>
  <label for="status">Status:</label><br>
  <input type="text" value="<%= @character.status%>" name="character[status]"><br>
  <label for="actor">Actor:</label><br>
  <input type="text" value="<%= @character.actor%>" name="character[actor]"><br>
  <label for="nickname">Nickname:</label><br>
  <input type="text" value="<%= @character.nickname%>" name="character[nickname]"><br>
  <input type="submit" value="Update a character">
</form>
